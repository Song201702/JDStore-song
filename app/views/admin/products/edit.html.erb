<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :author %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :publisher %>
  </div>

  <div class="group">
    <%= f.input :publication_date, start_year: 1950, end_year: Date.today.year %>
  </div>

  <div class="group">
    <%= f.input :pages %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.image.present? %>
    <span>目前商品图</span> </br>
    <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <div class="group">
    <%= f.select :category_id, @categories %>
  </div>


  <%= f.input :is_shelved %>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
