<div class="row">
  <% @products.each do |prodcut| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(prodcut) do %>
        <% if prodcut.image.present? %>
          <%= image_tag(product.iamge.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= prodcut.title %> ï¿¥ <%= product.price %>
    </div>
  <% end %>
</div>
