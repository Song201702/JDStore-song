<h2>订单列表</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>#</td>
      <td>生成时间</td>
      <td>订单状态</td>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to(order.id, order_path(order.token))%></td>
        <td><%= order.created_at.to_s(:long) %></td>
        <td><%= order.aasm_state %></td>
      </tr>
    <% end %>
  </tbody>

</table>
